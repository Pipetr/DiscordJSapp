<div class="d-flex justify-content-center mt-5">
    <form method="post" class="p-4 bg-light shadow rounded border" style="width: 26rem;">
        <h1 class="text-center mb-4">Form</h1>

        <div class="row mb-3">
            <label for="inputText3" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
        </div>

        <!-- Message input -->
        <div class="mb-4">
            <label for="comment" class="form-label">Review</label>
            <textarea class="form-control" rows="5" id="comment" name="text"></textarea>
        </div>

        <!-- Submit button -->
        <button type="button" class="btn btn-primary btn-block w-100">Send</button>
    </form>
</div>